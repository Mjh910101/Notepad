<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background_white_frame_5"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/people_list_userPicBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/people_list_userPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/people_list_friendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="好友"
            android:visibility="invisible"
            android:textColor="@color/title_bg"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/people_list_userPicBox"
            android:layout_alignTop="@id/people_list_userPicBox"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/people_list_friendText"
            android:layout_toRightOf="@id/people_list_userPicBox" >

            <TextView
                android:id="@+id/people_list_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/people_list_userAuthTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/people_list_userName"
                android:layout_alignTop="@id/people_list_userName"
                android:layout_toRightOf="@id/people_list_userName"
                android:src="@drawable/zhiming_icomn" />

            <TextView
                android:id="@+id/people_list_userDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/people_list_userName"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="description"
                android:textColor="@color/text_gray_01"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/people_list_userCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/people_list_userDescription"
                android:text="city"
                android:textColor="@color/text_gray_01"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/people_list_userTagBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/people_list_userDescription"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/people_list_userCity"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/Hua/StudioProjects/Notepad_v3/app/src/main/res/layout/people_list_item.xml -->