<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/appImage_picBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/appImage_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ImageView
        android:id="@+id/appImage_choicePic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/appImage_picBox"
        android:layout_alignTop="@id/appImage_picBox"
        android:layout_margin="2dp"
        android:src="@drawable/add_pic_ok_icon"
        android:visibility="invisible" />

</RelativeLayout>