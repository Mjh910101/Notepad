<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_listItem_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_background_gray_frame_0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/message_listItem_messageTap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/tap_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/message_listItem_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/message_listItem_messageTap"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="时间"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </RelativeLayout>

    <View
        android:id="@+id/message_listItem_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <LinearLayout
            android:id="@+id/message_listItem_userIconBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/message_listItem_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_listItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/message_listItem_userIconBox"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/text_gray_01"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/message_listItem_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_listItem_title"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/message_listItem_userIconBox"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="city"
            android:textColor="@color/text_gray_01"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>