<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/main_tap_muServer"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/main_tap_muServer_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tap_server_gray_icon"/>

            <TextView
                android:id="@+id/main_tap_muServer_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/main_tap_server"
                android:textColor="@color/text_gray_03"
                android:textSize="12dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_tap_muMessage"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/main_tap_muMessage_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tap_message_gray_icon"/>

            <TextView
                android:id="@+id/main_tap_muMessage_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/main_tap_message"
                android:textColor="@color/text_gray_03"
                android:textSize="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/main_tap_muMessage_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@drawable/red_bo"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_tap_muForum"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/main_tap_muForum_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tap_forum_gray_icon"/>

            <TextView
                android:id="@+id/main_tap_muForum_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/main_tap_forum"
                android:textColor="@color/text_gray_03"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_tap_muForum_hint"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:src="@drawable/red_bo"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_tap_muPeople"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/main_tap_muPeople_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tap_people_gray_icon"/>

            <TextView
                android:id="@+id/main_tap_muPeople_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/main_tap_people"
                android:textColor="@color/text_gray_03"
                android:textSize="12dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_tap_user"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/main_tap_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/tap_user_gray_icon"/>

            <TextView
                android:id="@+id/main_tap_user_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/main_tap_user"
                android:textColor="@color/text_gray_03"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_tap_user_hint"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:src="@drawable/red_bo"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>